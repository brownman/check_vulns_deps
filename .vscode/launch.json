    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Jest Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "outFiles": [
                "${workspaceRoot}/dist/**/*"
            ],
            "args": [
                "-i"
            ],
            // "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}

